        <main>
            <header>
                <h1>Shopping Cart</h1>
                <div class="header-right">
                    <div class="search-bar">
                        <i data-lucide="search"></i>
                        <input type="text" placeholder="Search anything in KCC...">
                    </div>
                    <button class="icon-button"><i data-lucide="bell"></i></button>
                    <button class="icon-button"><i data-lucide="settings"></i></button>
                    <button class="browse-product-button">Browse products</button>
                </div>
            </header>
            <div class="content">
                <div class="cart-items">
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/images/Gold Crown.jpg" alt="Product 1">
                        </div>
                        <div class="item-details">
                            <P>KCC Gold Crown Fresh Milk 500ml</P>
                            <p class="price">KES 54.00</p>
                        </div>
                        <div class="item-quantity">
                            <div class="quantity-container">
                                <button class="quantity-btn">-</button>
                                <span>1</span>
                                <button class="quantity-btn">+</button>
                            </div>
                            <button class="remove-item">Remove</button>
                        </div>
                    </div>
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/images/UHT Milk.jpg" alt="Product 1">
                        </div>
                        <div class="item-details">
                            <p>UHT Homogenised Milk 1L</p>
                            <p class="price">KES 130.00</p>
                        </div>
                        <div class="item-quantity">
                            <div class="quantity-container">
                                <button class="quantity-btn">-</button>
                                <span>1</span>
                                <button class="quantity-btn">+</button>
                            </div>
                            <button class="remove-item">Remove</button>
                        </div>
                    </div>
                <div class="cart-summary">
                    <button class="checkout-btn" onclick="window.location.href='/shippingaddress'">Proceed to checkout</button>
                </div>
            </div>
        </main>
        </div>
