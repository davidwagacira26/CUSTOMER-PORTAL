<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KCC Customer Portal</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="sidebar-header">
                <img src="/images/newkcc-logo.png" alt="KCC Portal Logo" style="width: 210px; height: auto;">
            </div>
            <nav>
                <ul>
                    <div class="top-content">
                    <li><a href="/dashboard"><i data-lucide="home"></i> Home</a></li>
                    <li><a href="/products"><i data-lucide="shopping-bag"></i> Products</a></li>
                    <li><a href="/cart"><i data-lucide="shopping-cart"></i> Cart</a></li>
                    <li><a href="/orders"><i data-lucide="package"></i> Orders</a></li>
                    <div class="bottom-content">
                        <li><a href="profile"><i data-lucide="user"></i> My Profile</a></li>
                        <li><a href="#" id="logout"><i data-lucide="log-out"></i> Log Out</a></li>
                    </div>
                </ul>
                
            </nav>
        </aside>
        <main class="main-content">
            <header>
                <div class="header-left">
                    <h1>Your Orders</h1>
                    <button id="sidebar-toggle" aria-label="Toggle Sidebar">
                        <i data-lucide="menu"></i>
                    </button>
                </div>
                
                <!-- Centered Search Bar -->
                <div class="header-search">
                    <input type="text" id="search-bar" placeholder="Search...">
                    <button id="search-button" aria-label="Search">
                        <i data-lucide="search"></i>
                    </button>
                </div>
            
                <!-- Profile Icon on the Right -->
                <div class="img-case">
                    <a href="/profile"><img src="/images/profile.png" alt=""></a>
                </div>
            </header>
            <div class="content">
                <div class="order-list">
                    <div class="order-item">
                        <div class="order-header">
                            <h3>Order #12345</h3>
                            <span class="order-status">Dispatched</span>
                        </div>
                        <p>Date: May 1, 2023</p>
                        <p>Total: $59.97</p>
                        <div class="order-progress">
                            <div class="progress-bar" style="width: 33%"></div>
                        </div>
                    </div>
                    <div class="order-item">
                        <div class="order-header">
                            <h3>Order #12346</h3>
                            <span class="order-status">On the road</span>
                        </div>
                        <p>Date: May 5, 2023</p>
                        <p>Total: $89.99</p>
                        <div class="order-progress">
                            <div class="progress-bar" style="width: 66%"></div>
                        </div>
                    </div>
                    <div class="order-item">
                        <div class="order-header">
                            <h3>Order #12347</h3>
                            <span class="order-status">Delivered</span>
                        </div>
                        <p>Date: May 10, 2023</p>
                        <p>Total: $129.95</p>
                        <div class="order-progress">
                            <div class="progress-bar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        lucide.createIcons();
        document.getElementById('sidebar-toggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
</body>
</html>