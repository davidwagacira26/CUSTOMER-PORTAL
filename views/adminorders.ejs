                            <td>KSh 11,002</td>
                            <td><i class="ri-more-2-line"></i></td>
                        </tr>
                        <tr>
                            <td>Novii Coffee...</td>
                            <td>250</td>
                            <td>24/06/24</td>
                            <td>Quick Mart </td>
                            <!-- <td><span class="status completed">Completed</span></td> -->
                            <td>Allan Maina</td>
                            <td><span class="status completed">Delivered</span></td>
                            <td>Mombasa</td>
                            <td>Likoni</td>
